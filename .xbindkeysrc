"pactl set-sink-volume @DEFAULT_SINK@ +5%"
    Shift + Control + M

"pactl set-sink-volume @DEFAULT_SINK@ -5%"
    Shift + Control + N

"exec mpc toggle ; playerctl play-pause"
    Shift + Control + K

"exec mpc next ; playerctl next"
    Shift + Control + L

"exec mpc prev ; playerctl previous"
    Shift + Control + J

"exec brightnessctl set 10%+"
    XF86MonBrightnessUp

"exec brightnessctl set 10%-"
    XF86MonBrightnessDown
