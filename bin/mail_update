#!/bin/sh
prev_len=$(( $(ls $HOME/.local/share/mail/david19kerrigan@gmail.com/INBOX/new | wc -l) + $(ls $HOME/.local/share/mail/dkerrigan@mailbox.org/INBOX/new | wc -l) + $(ls $HOME/.local/share/mail/david19kerrigan@gmail.com/[Gmail]/Important/new | wc -l) ))
mbsync -a
after_len=$(( $(ls $HOME/.local/share/mail/david19kerrigan@gmail.com/INBOX/new | wc -l) + $(ls $HOME/.local/share/mail/dkerrigan@mailbox.org/INBOX/new | wc -l) + $(ls $HOME/.local/share/mail/david19kerrigan@gmail.com/[Gmail]/Important/new | wc -l) ))
if [ "$prev_len" -ne "$after_len" ]; then
    herbe "$(( $after_len - $prev_len )) new emails"
fi


