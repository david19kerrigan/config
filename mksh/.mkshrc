set -o vi

f ()
{
    [ "${NNNLVL:-0}" -eq 0 ] || {
        echo "nnn is already running"
        return
    }
    export NNN_TMPFILE="${XDG_CONFIG_HOME:-$HOME/.config}/nnn/.lastd"
    command nnn -d "$@"
    [ ! -f "$NNN_TMPFILE" ] || {
        . "$NNN_TMPFILE"
        rm -f -- "$NNN_TMPFILE" > /dev/null
    }
}

gcm() {
    if [ -z "$1" ]; then
        echo "Please provide a commit message."
        return 1
    fi
    git commit -a -m "$1" && git push
}

PS1="$(printf "\033[0;31m[\033[1;33m%s\033[0;32m@\033[0;34m%s\033[0;35m\033[0;31m]\033[0m$ " $(logname) $(hostname))"

