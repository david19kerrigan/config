gcm() { 
    git commit -a -m "$1" && git push 
}
o() {
    selected_file=$(fd . "/home/david/" | fzy -l 30)
    if [ $? -ne 0 ]; then
        return 0
    fi
    if [ -d "$selected_file" ]; then
        cd "$selected_file"
    elif [ -f "$selected_file" ]; then
        cd $(dirname "$selected_file")
        vis "$selected_file"
    fi
}
cpf() {
    selected_dir=$(fd . "/home/david/" | fzy -l 30)
    if [ $? -ne 0 ]; then
        return 0
    fi
    if [ -d "$selected_dir" ]; then
        cp -r "$selected_dir" ./
    elif [ -f "$selected_dir" ]; then
        cp "$selected_dir" ./
    fi
}
mvf() {
    selected_dir=$(fd . "/home/david/" | fzy -l 30)
    if [ $? -ne 0 ]; then
        return 0
    fi
    mv "$selected_dir" ./
}
lg() {
    rg -l "$1" | xargs less +/"$1"
}
lgo() {
    selected_file=$(rg -l "$1" | fzy -l 30)
    if [ $? -ne 0 ]; then
        return 0
    fi
    vise "$selected_file"
    lgo "$1"
}
lf() {
    selected_dir=$(fd -d 1 | fzy -l 30)
    if [ $? -ne 0 ]; then
        return 0
    fi
    if [ -d "$selected_dir" ]; then
        cd "$selected_dir"
        lf
    elif [ -f "$selected_dir" ]; then
        vis "$selected_dir"
    fi
}

