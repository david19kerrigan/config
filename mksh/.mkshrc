set -o vi

f() {
    # `command` is needed in case `lfcd` is aliased to `lf`
    cd "$(command lf -print-last-dir "$@")"
}

gcm() {
    if [ -z "$1" ]; then
        echo "Please provide a commit message."
        return 1
    fi
    git commit -a -m "$1" && git push
}

PS1="$(printf "\033[0;31m[\033[1;33m%s\033[0;32m@\033[0;34m%s\033[0;35m\033[0;31m]\033[0m$ " $(logname) $(hostname -s))"

HISTFILE="$HOME/.mksh_history"
HISTSIZE=100000

export EDITOR="vis"

alias c="cd ; clear"

alias fzo='vis $(fzf --preview "bat -n --color=always {}")'
alias fzc='cd $(fzf --preview "bat -n --color=always {}" | awk -F/ "NF{NF--};1" OFS=/)'
alias gtp='git add --all; git commit -a -m "auto commit"; git push'
alias gtu='git pull'
alias gtb="git rev-parse --abbrev-ref HEAD"
alias autor="sudo pacman -Rsn $(pacman -Qdtq)"
alias upd="yay --noconfirm ; yay -Sc --noconfirm ; autor"
alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias neo='neomutt'
alias ncm='ncmpcpp'
alias iws='iwctl station wlan0 scan'
alias iwg='iwctl station wlan0 get-networks'
alias iwc='iwctl station wlan0 connect'
alias pys='source /home/david/.local/pip/venvs/env1/bin/activate'
alias btd='bluetoothctl devices'
