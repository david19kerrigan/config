# Navigation
alt - j : yabai -m window --focus next
alt - k : yabai -m window --focus prev

# Moving windows
shift + alt - j : yabai -m window --warp next
shift + alt - k : yabai -m window --warp prev

# Move focus container to workspace
shift + alt - 1 : yabai -m window --space 1; yabai -m space --focus 1
shift + alt - 2 : yabai -m window --space 2; yabai -m space --focus 2
shift + alt - 3 : yabai -m window --space 3; yabai -m space --focus 3
shift + alt - 4 : yabai -m window --space 4; yabai -m space --focus 4

# Resize windows
alt - h : yabai -m window --resize left:-50:0; \
                  yabai -m window --resize right:-50:0
alt - j : yabai -m window --resize bottom:0:50; \
                  yabai -m window --resize top:0:50
alt - k : yabai -m window --resize top:0:-50; \
                  yabai -m window --resize bottom:0:-50
alt - l : yabai -m window --resize right:50:0; \
                  yabai -m window --resize left:50:0

# Rotate windows clockwise and anticlockwise
alt - d         : yabai -m space --rotate 270
alt - i : yabai -m space --rotate 90

# Make window native fullscreen
alt - m         : yabai -m window --toggle zoom-fullscreen

shift + lctrl - k : mpc toggle
shift + lctrl - l : mpc next
shift + lctrl - j : mpc prev
