macro v set browser "setsid -f mpv --loop" ; open-in-browser ; set browse
macro p pipe-to "cat | ~/.config/newsboat/player"  
browser "qutebrowser"

player "mpv --no-audio-display"
download-path "~/Downloads/%N"
podlist-format "%b"
download-filename-format "%F - %n - %t"
delete-played-files yes


bind-key D pb-download
bind-key x pb-delete
bind-key p pb-play
bind-key a pb-toggle-download-all 


# Colors
color background default default
color listnormal default default
color listfocus_unread black yellow standout bold
color listfocus black yellow standout bold
color listnormal_unread blue default
color article default default
color info blue black bold


unbind-key j
unbind-key k
unbind-key h
unbind-key H
unbind-key L
unbind-key c
unbind-key ,

# Bindings
bind-key SPACE macro-prefix
bind-key h quit
bind-key q hard-quit
bind-key BACKSPACE quit
bind-key j down
bind-key k up
bind-key l open
bind-key H prev-feed
bind-key L next-feed
bind-key G end
bind-key g home
bind-key d pagedown
bind-key u pageup
bind-key a toggle-article-read
bind-key c toggle-show-read-feeds
